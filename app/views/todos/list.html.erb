<section class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>To-Dos NO completados</h1>
            <% @todos.each do |i| %>
                <% if i.completed == false %>
                    <h3><%= link_to i.description, i %></h3>
                <%end%>
            <%end%>
        </div>
        <div class="col-md-6">
            <h1>To-Dos Completados</h1>
            <% @todos.each do |i| %>
                <% if i.completed == true %>
                    <h3><%= link_to i.description, i %></h3>
                <%end%>
            <%end%>
        </div>
    </div>
    <%= link_to 'Volver', todos_path, class: 'btn btn-primary' %>
</section>